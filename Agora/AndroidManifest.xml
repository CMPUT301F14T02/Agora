<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brogrammers.agora"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:name=".Agora"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name=".AuthorQuestionActivity"
            android:label="@string/title_activity_author_question" >
        </activity>
        <activity
            android:name=".AuthorAnswerActivity"
            android:label="@string/title_activity_author_answer" >
        </activity>
        <activity
            android:name=".QuestionAnswerActivity"
            android:label="@string/title_activity_question_answer" >
        </activity>
    </application>

</manifest>
