<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/qobjecttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/RatingHLayout"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/qAuthor"
        android:layout_alignRight="@+id/qAuthor"
        android:layout_toRightOf="@+id/RatingHLayout"
        android:gravity="left"
        android:hint="@string/titletext"
        android:textColor="#000000"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:maxLines="2"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/RatingHLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/HLayoutAnswerCount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/AuthorQuestionImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_upvote" />

        <TextView
            android:id="@+id/qObjectScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Score"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/qQuestionFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_rating_favoritepink" />

        <ImageView
            android:id="@+id/qQuestionFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_flag" />
    </LinearLayout>

    <TextView
        android:id="@+id/qAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:layout_toRightOf="@+id/HLayoutAnswerCount"
        android:hint="Author, Date"
        android:paddingTop="2px"
        android:textColor="#444444" />

    <LinearLayout
        android:id="@+id/HLayoutAnswerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/qAuthor" >

        <ImageView
            android:id="@+id/q_AnswerCountIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_answercountdark2" />

        <TextView
            android:id="@+id/qACountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Count"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/qlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:layout_alignBottom="@+id/HLayoutAnswerCount"
        android:layout_toRightOf="@+id/HLayoutAnswerCount"
        android:hint="Post Location"
        android:textColor="#444444" />

</RelativeLayout>