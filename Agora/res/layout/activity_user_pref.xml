<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.brogrammers.agora.views.UserPrefActivity" >

    <TextView
        android:id="@+id/locationTopicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Location Awareness"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	<RadioGroup
	    android:id="@+id/gpsRadioGroup"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

		<RadioButton
		    android:id="@+id/useGpsRadio"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="46dp"
		    android:onClick="onRadioButtonClicked" />

		<RadioButton
		    android:id="@+id/setTextRadio"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="17dp"
		    android:onClick="onRadioButtonClicked" />

	</RadioGroup>

	<TextView
	    android:id="@+id/useGpsTextView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/locationTopicText"
	    android:layout_marginTop="24dp"
	    android:layout_toRightOf="@+id/gpsRadioGroup"
	    android:text="Use GPS"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/setLocationTextView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/useGpsTextView"
	    android:layout_marginTop="14dp"
	    android:layout_toRightOf="@+id/gpsRadioGroup"
	    android:text="Set Location"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<EditText
	    android:id="@+id/setLocationEditText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/gpsRadioGroup"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/setLocationTextView"
	    android:ems="10"
	    android:hint="Enter Location..." >

	    <requestFocus />
	</EditText>
	
</RelativeLayout>