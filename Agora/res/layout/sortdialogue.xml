<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewSortDialouge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:fillViewport="true" >
	
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="14dp"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" />

    <TextView
        android:id="@+id/sortbyTextDialoug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:paddingLeft="10dp"
        android:text="@string/sortBy"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <View
        android:layout_width="283dp"
        android:layout_height="10dp" />

	<RadioGroup
	    android:id="@+id/sortbyRadioGroup"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >
        
        <RadioButton
            android:id="@id/sortbyTextDialoug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="@string/date"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/sortupvoteradioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="@string/upvote"
            android:textColor="#000000" />

	</RadioGroup>
	
	
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/arrangebyTextDialoug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/arrangeby"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />



	<RadioGroup
	    android:id="@+id/arrangebyRadioGroup"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:clickable="false"
	    android:focusable="false"
	    android:focusableInTouchMode="false"
	    android:longClickable="false"
	    android:scrollbarAlwaysDrawVerticalTrack="false" >
        
    <RadioButton
        android:id="@+id/arrangebyAscOrderRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="Ascending Order"
        android:textColor="#000000" />

        <RadioButton
            android:id="@+id/descOrderRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Descending Order"
            android:textColor="#000000" />

	</RadioGroup>
	
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/filterbyTextDialoug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="10dp"
        android:text="@string/filterby"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/favouritecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="Favourite"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/picturecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="Picture"
        android:textColor="#000000" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

</LinearLayout>
</ScrollView>