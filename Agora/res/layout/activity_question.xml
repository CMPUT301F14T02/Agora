<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Rel2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.brogrammers.agora.QuestionActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/QuestionUpVoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_action_upvote" />

        <TextView
            android:id="@+id/qScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="R"
            android:paddingRight="15dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/qTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Loading..."
            android:textSize="22dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/qBody"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:gravity="bottom" >

        <Button
            android:id="@+id/QuestionAnswersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Answers" />

        <Button
            android:id="@+id/QuestionCommentsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Comments" />

    </RelativeLayout>

    <TextView
        android:id="@+id/AuthourDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayout1"
        android:layout_alignLeft="@+id/RelativeLayout1"
        android:hint="Loading..."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/qBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:hint="Loading..."
        android:textSize="18dp" />

</RelativeLayout>